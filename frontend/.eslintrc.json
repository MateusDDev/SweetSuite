{
  "extends": "@trybe/eslint-config-frontend/typescript",
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/control-has-associated-label": "off",
    "no-alert": "off"
  },
  "overrides": [
    {
      "files": [
        "src/tests/**/*.js"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 90,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true
          }
        ],
        "max-lines": [
          "off"
        ],
        "no-magic-numbers": [
          "off"
        ]
      }
    }
  ]
}